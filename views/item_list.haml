:css
  .item-tab {
    padding: 1em 0.8em;  
    background-color: #f8f8f8;
    color: #a9a9a9;
    text-shadow: 0 1px 0 rgba(255,255,255,.1), 0 0 30px rgba(255,255,255,.125);
    width: 4.2em;
  }
  .item-tab.conf-proc {
    border-left: 4px solid rgb(49, 145, 177);
  }
  .item-tab i {
    font-size: 5em;
    line-height: 1em;
  }
  .item-tab p {
    font-size: 1.5em;
    font-weight: bold;
  }
  .item-data {
    padding: 0.8em;
   }
  td {
    vertical-align: top;
    padding: .7em;
  }
  table {
    border-collapse: collapse;
    width: 100%;
  }
  table:first_child {
    border-top: 1px solid #eee;
  }
  tr {
    border-bottom: 1px solid #eee;
    padding-bottom: 5em;
  }
  .item-data a {
    margin-left: 0.2em;
    margin-right: 0.2em;
  }
  .hl {
    background-color: rgb(235,245,167);
    border-bottom: 1px dashed grey;
  }
  .extra {
    color: #999;
    font-size: 1.2em;
    line-height: 1.3em;
  }
  .lead {
    margin-bottom: 0.3em;
  }
  .item-tab-icons {
    text-align: left;
    margin: .5em;
    margin-top: 1em;
    margin-bottom: 0;
  }
  .item-tab-icons i {
    font-size: 1.8em; 
    line-height: 1.1em;
    vertical-align: text-top;
  }
  .item-tab-date {
    text-align: center;
  }
  .item-tab-icons a, .item-tab-icons a:visited {
    color: rgb(167, 204, 145);
  }
  .item-tab-icons a:hover {
    color: rgb(147, 184, 125);
  }
  .item-links a {
    margin-right: 1.5em;
  }
  .item-data .extra span {
    font-size: .9em;
    line-height: 1em;
  }
  .item-data .extra b {
    font-size: 1.2em;
  }

:javascript
  MAX_EXPAND_CHARS = 60;
  
  $(document).ready(function() {
    $('.oa-tooltip').tooltip({
      title: 'Article is published in a journal present in the Directory of Open Access Journals.'
    });

    $.each($('.expand'), function(index, item) {
      if (item.text().length() > MAX_EXPAND_CHARS) {
        item.data('full-text') = item.text();        
        item.text(item.text.substring(0, MAX_EXPAND_CHARS));
        item.append($('<a>').addClass('.expander').text('...'));
      }
    });

    $('.expander').click(function(e) {
      $(this).text($(this).data('full-text'));
    });
  });

%table  
  - page[:items].each do |item|
    - case item.type
    - when 'journal_article'
      = partial :item_article, :page => page, :item => item
    - when 'conference_paper'
      = partial :item_conf_proc, :page => page, :item => item
    - else
      = partial :item_unknown, :page => page, :item => item