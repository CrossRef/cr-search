    - if expired_session?
      :javascript
        $(document).ready(function() {
          $('.top-left').notify({
            message: {text: "You have been signed out of ORCID (sign-ins last for 1 hour)."},
            type: 'warn',
            fadeOut: {enabled: true, delay: 4000}
          }).show();

          $.ajax({
            url: '/auth/signout',
          });
        });
