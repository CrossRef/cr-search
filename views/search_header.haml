:css
  .cr-red {
    color: rgb(192, 70, 62);
  }
  .home-link, .home-link:visited, .home-link:hover {
    text-decoration: none;
    color: black;
  }
  .simple-nav {
    font-size: 1.4em;
    line-height: 1.1em;
    margin-top: 1em;
  }
  .simple-nav a, .simple-nav a:visited {
    color: grey;
    padding-left: .4em;
  }
  .search {
    position: relative;
    margin-top: .5em;
    margin-right: 16em;
  }
  .search i {
    position: absolute;
    top: 0.5em;
    left: 0.5em;
    font-size: 2em;
    color: #aaa;
  }
  .search input {
    line-height: 1.2em;
    height: 1.4em;
    font-size: 1.6em;
  }
  a.home-link img {
    width: 175px;
  }
  .span-header {
    margin-top: 1.2em;
    margin-bottom: -1.3em;
    
  }

.row-fluid
  .span-header.span3
    %a.home-link{:href => '/'}
      %img{:src => '/cms-logo.png'}
  .span-header.span9
    .pull-right
      .simple-nav
        %a{:href => '/help/api'} API
        %a{:href => '/help/status'} Status
    %form{:method => 'GET'}
      .search
        %input.input.input-xxlarge{:placeholder => 'Search', :style => 'padding-left: 2em;', :name => 'q', :type => 'text', :value => page[:bare_query], :action => '/'}
        %i.icon-search      
%hr
    